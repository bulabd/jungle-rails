<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order <%= @order.email %>!</h4>
    
    
    <h4>Here is your order:</h4>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody class="tbody">
        <% items = @order.line_items %>
        <% items.each do |item| %>
          <%= render 'line_item', product: Product.find_by(id: item[:product_id]), quantity: item[:quantity].to_i %>
        <% end %>
      </tbody>
    </table>

    <h4 class="total-price">Order total: <%= @order.total_cents.to_f / 100 %>$</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
